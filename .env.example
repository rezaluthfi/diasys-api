# ============================================
# DIASYS API - Environment Configuration
# ============================================
# File ini adalah template. Copy ke .env dan isi dengan nilai sebenarnya.

# --- SECURITY KEYS ---
# Generate random keys menggunakan: openssl rand -hex 32
# Atau di Python: import secrets; print(secrets.token_urlsafe(32))
SECRET_KEY=your_super_secret_access_token_key_minimum_32_characters_long
REFRESH_SECRET_KEY=your_super_secret_refresh_token_key_different_from_access

# --- JWT CONFIGURATION ---
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- DATABASE ---
# SQLite (Development)
DATABASE_URL=sqlite:///./database.db

# PostgreSQL (Production - contoh)
# DATABASE_URL=postgresql://user:password@localhost:5432/diasys_db

# MySQL (Production - contoh)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/diasys_db

# --- CORS ORIGINS ---
# Development: allow all
CORS_ORIGINS=["*"]

# Production: specific domains only
# CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# --- API CONFIGURATION ---
API_TITLE=DiaSys - Diabetes Prediction API
API_DESCRIPTION=API Prediksi Risiko Diabetes dengan Autentikasi JWT
API_VERSION=1.0.0

# --- ENVIRONMENT ---
ENVIRONMENT=development
# Options: development, staging, production

# --- SERVER CONFIGURATION ---
HOST=0.0.0.0
PORT=8000
RELOAD=true

# --- LOGGING ---
LOG_LEVEL=info
# Options: debug, info, warning, error, critical
